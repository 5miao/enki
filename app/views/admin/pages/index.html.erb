<h1>Your pages</h1>

<table cellspacing="0" cellpadding="0">
  <thead>
    <tr>
      <th>Created At</th>
      <th>Title</th>
      <th>Excerpt</th>
      <th>Link</th>
      <th>X</th>
    </tr>
  </thead>
	
  <tbody>
    <% if @pages.empty? -%>
      <tr><td colspan="5">There are no pages at this time.</td></tr>
    <% else -%>
      <% @pages.each do |page| -%>
        <tr class="<%= cycle('', 'alt') %>">
          <td><%= page.created_at.strftime('%d %b, %Y') %></td>
          <td><%= link_to(h(page.title), edit_admin_page_url(page)) %></td>
          <td><%=h truncate(page.body, 50) %></td>
          <td><%= page.slug %></td>
          <td><%= link_to 'X', admin_page_url(page), :method => :delete, :confirm => "You are about to delete the page '#{page.title}'. This is permanent.\n\nAre you ABSOLUTELY sure?" %></td>
        </tr>
      <% end -%>
    <% end -%>
  </tbody>

  <tfoot>
    <% if @pages.page_count > 1 -%>
      <tr class="pagination">
        <td colspan='5'>
          <%= will_paginate(@pages, :prev_label => '« Newer', :next_label => 'Older »') %>
        </td>  
      </tr>  
    <% end -%>  
  </tfoot>
</table>
