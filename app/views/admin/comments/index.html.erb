<h1>Comments</h1>
<table cellspacing="0" cellpadding="0">
	<tr>
		<th>Created At</th>
		<th>Commenter</th>
		<th>Excerpt</th>
		<th>Post</th>
		<th>X</th>
	</tr>
	
	<% if @comments.empty? -%>
		<tr><td colspan="5">There are no comments at this time.</td></tr>
	<% else -%>
		<% @comments.each_with_index do |comment, index| -%>
			<tr id="comment-<%= comment.id %>" class="<%= cycle('', 'alt') %>">
				<td><%= comment.created_at.strftime('%d %b, %Y') %></td>
				<td><%= link_to(h(comment.author), edit_admin_comment_path(comment)) %></td>
				<td><%=h truncate(comment.body, 40) %></td>
				<td><%= link_to(comment.post_title, edit_admin_post_path(comment.post))%></td>
				<td><%= link_to('X', admin_comment_path(comment), :method => :delete, :confirm => "You are about to delete this comment. This cannot be undone. Are you sure?") %></td>
			</tr>
		<% end -%>
	<% end -%>

  <% if @comments.page_count > 1 -%>
    <tr class="pagination">
      <td colspan='5'>
        <%= will_paginate(@comments, :prev_label => '« Newer', :next_label => 'Older »') %>
      </td>  
    </tr>  
  <% end -%>  
</table>
