<% content_for(:page_title) do %><%= posts_title(@tag) %><% end -%>
<% content_for(:head)       do %><%= auto_discovery_link_tag(:atom, :format => 'atom', :tag => @tag) %><% end -%> 
<% @posts.each do |post| -%>
<div class="post post-#{post.id}">
  <%= render :partial => 'post', :locals => {:post => post} %>
</div>
<% end -%>
